@model ASP.NET_MVC.Models.LIVRE

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Livre", FormMethod.Post, new
{ enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>LIVRE</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Test" class="control-label col-md-2">Titre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.libelle, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.libelle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Test" class="control-label col-md-2">Upload Livre (en pdf)</label>
            <div class="col-md-10">
                <input type="file" id="image_livre" name="image_livre" class="form-control" />
                @Html.ValidationMessageFor(model => model.image_livre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Test" class="control-label col-md-2">Genre</label>
            <div class="col-md-10">
                @Html.DropDownList("genre_id", null ,htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.genre_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Test" class="control-label col-md-2">Courant Littéraire</label>
            <div class="col-md-10">
                @Html.DropDownList("commentlitteraire_id", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.commentlitteraire_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AUTEUR, "AUTEUR", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AUTEUR", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.AUTEUR, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="Test" class="control-label col-md-2">Editeur</label>
            <div class="col-md-10">
                @Html.DropDownList("editeur_id", null, htmlAttributes: new { @class = "form-control", required = "required" })
                @Html.ValidationMessageFor(model => model.editeur_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
